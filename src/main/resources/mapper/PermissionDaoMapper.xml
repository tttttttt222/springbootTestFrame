<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examples.demo.dao.mapper.PermissionDao">

    <sql id="allColumn">
        id,
        permission,
        role_id AS roleId
    </sql>


    <select id="findPermissionById" resultType="com.examples.demo.dao.model.Permission" parameterType="java.lang.Long">
        SELECT
        <include refid="allColumn"/>
        FROM permission
        WHERE role_id = #{role_id}
    </select>


</mapper>
