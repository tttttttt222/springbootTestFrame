<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examples.demo.dao.mapper.UserDao">

    <sql id="allColumn">
        id,
        user_name AS userName,
        password,
        role_id AS roleId
    </sql>


    <select id="findByUsername" resultType="com.examples.demo.dao.model.User" parameterType="java.lang.String">
        SELECT
        <include refid="allColumn"/>
        FROM user
        WHERE user_name = #{userName}
    </select>


</mapper>
